<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myListView">

    <TextView
        android:id="@+id/textViewauteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dan Brown"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp" />

    <TextView
        android:id="@+id/textViewTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="The Rosetta Stone"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auteurs:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toLeftOf="@+id/textViewauteur"
        android:layout_toStartOf="@+id/textViewauteur"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cover"
        android:layout_alignTop="@+id/textViewTitre"
        android:layout_alignLeft="@+id/textViewTitre"
        android:layout_alignStart="@+id/textViewTitre" />

</RelativeLayout>